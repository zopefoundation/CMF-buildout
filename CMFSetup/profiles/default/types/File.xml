<?xml version="1.0"?>
<type-info id="File" kind="Factory-based Type Information"
           title="File" meta_type="Portal File"
           icon="file_icon.gif"
           immediate_view="metadata_edit_form"
           filter_content_types="1" allowed_content_types=""
           allow_discussion="0" global_allow="1"
           product="CMFDefault" factory="addFile">
  <description>File objects can contain arbitrary downloadable files.
</description>
  <aliases>
   <alias from="(Default)" to="index_html"/>
   <alias from="view" to="file_view"/>
  </aliases>
  <action action_id="view" title="View" condition=""
          action_expr="string:${object_url}/file_view"
          permissions="View" category="object"
          visible="True"/>
  <action action_id="download" title="Download" condition=""
          action_expr="string:${object_url}"
          permissions="View" category="object"
          visible="True"/>
  <action action_id="edit" title="Edit" condition=""
          action_expr="string:${object_url}/file_edit_form"
          permissions="Modify portal content"
          category="object" visible="True"/>
  <action action_id="metadata" title="Metadata" condition=""
          action_expr="string:${object_url}/metadata_edit_form"
          permissions="Modify portal content"
          category="object" visible="True"/>
</type-info>
