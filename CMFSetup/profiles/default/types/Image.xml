<?xml version="1.0"?>
<type-info id="Image" kind="Factory-based Type Information"
           title="Image" meta_type="Portal Image"
           icon="image_icon.gif"
           immediate_view="metadata_edit_form"
           filter_content_types="1" allowed_content_types=""
           allow_discussion="0" global_allow="1"
           product="CMFDefault" factory="addImage">
  <description>Image objects can be embedded in Portal documents.
</description>
  <aliases>
   <alias from="(Default)" to="index_html"/>
   <alias from="view" to="image_view"/>
  </aliases>
  <action action_id="view" title="View" condition=""
          action_expr="string:${object_url}/image_view"
          permissions="View" category="object"
          visible="True"/>
  <action action_id="edit" title="Edit" condition=""
          action_expr="string:${object_url}/image_edit_form"
          permissions="Modify portal content"
          category="object" visible="True"/>
  <action action_id="metadata" title="Metadata" condition=""
          action_expr="string:${object_url}/metadata_edit_form"
          permissions="Modify portal content"
          category="object" visible="True"/>
</type-info>
