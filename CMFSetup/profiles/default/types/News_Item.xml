<?xml version="1.0"?>
<type-info id="News Item"
           kind="Factory-based Type Information"
           title="News Item" meta_type="News Item"
           icon="newsitem_icon.gif"
           immediate_view="metadata_edit_form"
           filter_content_types="1" allowed_content_types=""
           allow_discussion="0" global_allow="1"
           product="CMFDefault" factory="addNewsItem">
  <description>News Items contain short text articles and carry a title as well as
an optional description.
</description>
  <aliases>
   <alias from="gethtml" to="source_html"/>
   <alias from="(Default)" to="newsitem_view"/>
   <alias from="view" to="newsitem_view"/>
  </aliases>
  <action action_id="view" title="View" condition=""
          action_expr="string:${object_url}/newsitem_view"
          permissions="View" category="object"
          visible="True"/>
  <action action_id="edit" title="Edit" condition=""
          action_expr="string:${object_url}/newsitem_edit_form"
          permissions="Modify portal content"
          category="object" visible="True"/>
  <action action_id="metadata" title="Metadata" condition=""
          action_expr="string:${object_url}/metadata_edit_form"
          permissions="Modify portal content"
          category="object" visible="True"/>
</type-info>
